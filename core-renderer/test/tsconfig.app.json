{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "tests/**/*",
        "tests/**/*.vue",
        "src/core/**/*"
    ],
    "exclude": [
        "tests/**/__tests__/*"
    ],
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "noImplicitAny": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "tests/*"
            ]
        },
        "verbatimModuleSyntax": false
    }
}